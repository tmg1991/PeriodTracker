<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/widget"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              >

    <ImageView
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription=""
        android:src="@drawable/circle2"/>

    <!-- Layout 1x1 -->
    <RelativeLayout
        android:id="@+id/layout_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        tools:visibility="visible"
        android:layout_centerVertical="true"
        >

        <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="10dp"
          android:text="@string/widget_circle"
          android:textSize="6dp"
          android:textColor="#cc22f2"/>

        <TextView
          android:id="@+id/remaining"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="14dp"
          android:textSize="16dp"
          android:textColor="#cc22f2"/>

    </RelativeLayout>

    <!-- Layout 2x1, 3x1, 4x1, 5x1 -->
    <RelativeLayout
      android:id="@+id/layout_2_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:visibility="visible"
      tools:visibility="visible"
      android:layout_centerVertical="true">

        <TextView
          android:id="@+id/name_2_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="10dp"
          android:text="@string/widget_circle"
          android:textSize="8dp"
          android:textColor="#cc22f2"/>

        <TextView
          android:id="@+id/remaining_2_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="16dp"
          android:textSize="20dp"
          android:textColor="#cc22f2"/>

    </RelativeLayout>

    <!-- Layout 2x2, 2x3, 2x4, 2x5 -->
    <RelativeLayout
      android:id="@+id/layout_2_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:visibility="invisible"
      tools:visibility="visible"
      android:layout_centerVertical="true">

        <TextView
          android:id="@+id/name_2_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="10dp"
          android:text="@string/widget_circle"
          android:textSize="12dp"
          android:textColor="#cc22f2"/>

        <TextView
          android:id="@+id/remaining_2_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="18dp"
          android:textSize="24dp"
          android:textColor="#cc22f2"/>

    </RelativeLayout>

    <!-- Layout 3x2, 4x2, 5x2 -->
    <RelativeLayout
      android:id="@+id/layout_3_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:visibility="invisible"
      tools:visibility="visible"
      android:layout_centerVertical="true">

        <TextView
          android:id="@+id/name_3_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="10dp"
          android:text="@string/widget_circle"
          android:textSize="14dp"
          android:textColor="#cc22f2"/>

        <TextView
          android:id="@+id/remaining_3_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="20dp"
          android:textSize="28dp"
          android:textColor="#cc22f2"/>

    </RelativeLayout>

    <!-- Layout 3x3, 4x3, 5x3 -->
    <RelativeLayout
      android:id="@+id/layout_3_3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:visibility="invisible"
      tools:visibility="visible"
      android:layout_centerVertical="true">

        <TextView
          android:id="@+id/name_3_3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="10dp"
          android:text="@string/widget_circle"
          android:textSize="16dp"
          android:textColor="#cc22f2"/>

        <TextView
          android:id="@+id/remaining_3_3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="22dp"
          android:textSize="32dp"
          android:textColor="#cc22f2"/>

    </RelativeLayout>

    <!-- Layout 4x4, 5x4 -->
    <RelativeLayout
	    android:id="@+id/layout_4_4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:visibility="invisible"
	    tools:visibility="visible"
	    android:layout_centerVertical="true">

	    <TextView
		    android:id="@+id/name_4_4"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:paddingTop="10dp"
		    android:text="@string/widget_circle"
		    android:textSize="18dp"
		    android:textColor="#cc22f2"/>

        <TextView
          android:id="@+id/remaining_4_4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="24dp"
          android:textSize="36dp"
          android:textColor="#cc22f2"/>

    </RelativeLayout>

    <!-- Layout 5x5 -->
    <RelativeLayout
	    android:id="@+id/layout_5_5"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:visibility="invisible"
	    tools:visibility="visible"
	    android:layout_centerVertical="true">

	    <TextView
		    android:id="@+id/name_5_5"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:paddingTop="10dp"
		    android:text="@string/widget_circle"
		    android:textSize="24dp"
		    android:textColor="#cc22f2"/>

        <TextView
          android:id="@+id/remaining_5_5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:paddingTop="10dp"
          android:textSize="40dp"
          android:textColor="#cc22f2"/>

    </RelativeLayout>

</RelativeLayout>